@using CloveceWeb.Models;
@model CloveceModel
@{
    ViewData["Title"] = "Mapa";
}

<h1>Mapa Hry</h1>


<table>
    @for (int x = 0; x <= 10; x++)
    {
    <tr>
        @for (int y = 0; y <= 10; y++)
        {
            string cierna = "#000000";
            string modra = "#0000FF";
            string zelena = "#008000";
            string cervena = "#FF0000";
            string zlta = "#bfbf00";

            bool inserted = false;


            for (int i = 0; i < 16; i++)
            {


                if ((x == Model.data.Hrac_x[i]) && (y == Model.data.Hrac_y[i]) && (!inserted))
                {
                    System.Diagnostics.Debug.WriteLine(i);
                    if (Model.data.Farba[i] == "zelena")
                    {
                        <td style="color: @zelena"><a href="/Clovece/HodKocku?farba=zelena&id=@i">+ </a></td>
                        ;
                    }
                    else if (Model.data.Farba[i] == "cervena")
                    {
                        <td style="color: @cervena"><a href="/Clovece/HodKocku?farba=cervena&id=@i">+ </a></td>
                        ;
                    }
                    else if (Model.data.Farba[i] == "modra")
                    {
                        <td style="color: @modra"><a href="/Clovece/HodKocku?farba=modra&id=@i">+ </a></td>
                        ;
                    }
                    else if (Model.data.Farba[i] == "zlta")
                    {
                        <td style="color: @zlta"><a href="/Clovece/HodKocku?farba=zlta&id=@i">+ </a></td>
                        ;
                    }
                    inserted = true;
                }

            }


            if (!inserted)
            {
                if (x == 0 || x == 1 || x == 2 || x == 3 || x == 7 || x == 8 || x == 9 || x == 10)
                {
                    if (x == 0 && y == 6)
                    {
                        <td style="color: @zelena">O </td>
                        ;
                    }
                    else if ((y == 5 && x == 1) || (y == 5 && x == 2) || (y == 5 && x == 3))
                    {
                        <td style="color: @zelena">O </td>
                        ;
                    }

                    else if ((y == 5 && x == 7) || (y == 5 && x == 8) || (y == 5 && x == 9))
                    {
                        <td style="color: @modra">O </td>
                        ;
                    }

                    else if (x == 10 && y == 4)
                    {
                        <td style="color: @modra">O </td>
                        ;
                    }
                    else if (y == 4 || y == 5 || y == 6)
                    {
                        <b><td style="color: @cierna">O </td></b>
                        ;
                    }
                    else if ((x == 0 && (y == 0 || y == 1)) || (x == 1 && (y == 0 || y == 1)))
                    {
                        <td style="color: @zlta">O </td>
                        ;
                    }
                    else if ((x == 0 && (y == 9 || y == 10)) || (x == 1 && (y == 9 || y == 10)))
                    {
                        <td style="color: @zelena">O </td>
                        ;
                    }
                    else if ((x == 9 && (y == 0 || y == 1)) || (x == 10 && (y == 0 || y == 1)))
                    {
                        <td style="color: @modra">O </td>
                        ;
                    }
                    else if ((x == 9 && (y == 9 || y == 10)) || (x == 10 && (y == 9 || y == 10)))
                    {
                        <td style="color: @cervena">O </td>
                        ;
                    }
                    else
                    {
                        <td>  </td>
                        ;
                    }

                }

                else if (x == 4 || x == 6)
                {
                    if (x == 4 && y == 0)
                    {
                        <td style="color: @zlta">O </td>
                        ;
                    }

                    else if (x == 6 && y == 10)
                    {
                        <td style="color: @cervena">O </td>
                        ;
                    }

                    else if (x == 4 && y == 5)
                    {
                        <td style="color: @zelena">O </td>
                        ;
                    }
                    else if (x == 6 && y == 5)
                    {
                        <td style="color: @modra">O </td>
                        ;
                    }
                    else
                    {
                        <b><td style="color: @cierna">O </td></b>
                        ;
                    }
                }



                else if (x == 5)
                {
                    if (y == 1 || y == 2 || y == 3 || y == 4)
                    {
                        <td style="color: @zlta">O </td>
                        ;
                    }

                    else if (y == 6 || y == 7 || y == 8 || y == 9)
                    {
                        <td style="color: @cervena">O </td>
                        ;
                    }

                    else if (y == 0 || y == 10)
                    {
                        <b><td style="color: @cierna">O </td></b>
                        ;
                    }

                    else
                    {
                        <td>  </td>
                        ;
                    }
                }
            }
        }
    </tr>
    }
</table>

